@model SmartHome.Models.Schedule
<link href="~/css/scheduler.css" rel="Stylesheet" />
@{
    ViewData["Title"] = "Create";
}

<!-- Passing Data From Controller to View using ViewData
    https://www.c-sharpcorner.com/article/asp-net-mvc-passing-data-from-controller-to-view/-->
@{
    var data = (Device)ViewData["Device"];
}

<h2>Create</h2>

<hr />
<div class="row">
    <div class="col-md-4" id="content">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Device ID</label>
                <input class="form-control" value=@data.Id readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Device name</label>
                <input class="form-control" value=@data.DeviceName readonly />
            </div>
            <div class="form-group">
                <label asp-for="startTime" class="control-label">Starting time</label>
                <input asp-for="startTime" class="form-control" />
                <span asp-validation-for="startTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endTime" class="control-label">Ending time</label>
                <input asp-for="endTime" class="form-control" />
                <span asp-validation-for="endTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="applyToEveryWeek" />Schedule every week
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="dayOfWeek" class="control-label">Day</label>
                @if (@ViewBag.dDay != null)
                {
                    <input asp-for="dayOfWeek" class="form-control" value="@ViewBag.dDay" readonly />
                }
                else
                {
                    <input asp-for="dayOfWeek" class="form-control" />
                }
                <span asp-validation-for="dayOfWeek" class="text-danger"></span>
            </div>
            
            <!-- Added a hidden input -->
            <input asp-for="device" class="form-control" value=@data readonly />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

